<div id="divAlert" class="alert alert-danger" role="alert" style="display:none;width:100% ; margin-top:0px;">
    <button type="button" class="close float-left" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <div id="divMessages"></div>
</div>

<script type="text/javascript">

    $(function () {
        var msgSuccess = '@Html.Raw(TempData["Success"])';
        var msgError = '@Html.Raw(TempData["Error"])';

        if (msgSuccess != undefined && msgSuccess != '') {
            $('#divAlert').removeClass('alert-info').removeClass('alert-danger').addClass('alert-success');
            $('#divMessages').html(msgSuccess);
            $('#divAlert').slideDown();
        }

        if (msgError != undefined && msgError != '') {
            $('#divAlert').removeClass('alert-info').removeClass('alert-success').addClass('alert-danger');
            $('#divMessages').html(msgError);
            $('#divAlert').slideDown();
        }
    });

</script>